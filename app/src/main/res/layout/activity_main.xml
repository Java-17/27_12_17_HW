<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sheygam.java_17_27_12_hw.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name_txt"
        android:gravity="center_horizontal"
        android:textSize="26sp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="64dp"/>
    <TextView
        android:layout_below="@id/name_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email_txt"
        android:gravity="center_horizontal"
        android:textSize="26sp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="16dp"/>
    <TextView
        android:layout_below="@id/email_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/phone_txt"
        android:gravity="center_horizontal"
        android:textSize="26sp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Set name"
            android:id="@+id/set_name_btn"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Set email"
            android:id="@+id/set_email_btn"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Set phone"
            android:id="@+id/set_phone_btn"/>
    </LinearLayout>

</RelativeLayout>
